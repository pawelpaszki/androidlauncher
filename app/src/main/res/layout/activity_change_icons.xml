<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#FFFFFFFF"
android:theme="@style/Theme.AppCompat"
android:id="@+id/set_icons_container"
tools:context="com.pawelpaszki.launcher.ChangeIconsActivity"
android:weightSum="1">

<android.support.v7.widget.Toolbar
    android:id="@+id/set_icons_toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#1A237E"
    android:minHeight="?attr/actionBarSize"
    android:theme="?attr/actionBarTheme"
    android:title="@string/toolbar_set_icons" >

</android.support.v7.widget.Toolbar>

<ListView
    android:id="@+id/set_icons_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="60dp"
    >
</ListView>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_frame"
        android:visibility="gone">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image_view"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cropped_background"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:background="@drawable/crop_background"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/top_left_crop"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@android:color/transparent"
            android:drawableStart="@mipmap/crop_top_left"
            android:scaleType="fitXY"
            android:visibility="gone"
            android:padding="0dp"
            android:tag="top_left">
        </Button>
        <Button
            android:layout_height="60dp"
            android:layout_width="60dp"
            android:id="@+id/top_right_crop"
            android:background="@android:color/transparent"
            android:visibility="gone"
            android:drawableStart="@mipmap/crop_top_right"
            android:scaleType="fitXY"
            android:padding="0dp"
            android:tag="top_right">
        </Button>
        <Button
            android:layout_height="60dp"
            android:layout_width="60dp"
            android:id="@+id/left_bottom_crop"
            android:background="@android:color/transparent"
            android:visibility="gone"
            android:drawableStart="@mipmap/crop_bottom_left"
            android:padding="0dp"
            android:scaleType="fitXY"
            android:tag="bottom_left">
        </Button>
        <Button
            android:layout_height="60dp"
            android:layout_width="60dp"
            android:id="@+id/bottom_right_crop"
            android:background="@android:color/transparent"
            android:visibility="gone"
            android:drawableStart="@mipmap/crop_bottom_right"
            android:padding="0dp"
            android:scaleType="fitXY"
            android:tag="bottom_right">
        </Button>
    </FrameLayout>

    <Button
        android:id="@+id/apply_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="14sp"
        android:text="@string/change_icon"
        android:paddingTop="3dp"
        android:background="#00000000"
        android:textColor="#FFF"
        android:visibility="gone"
        android:onClick="saveIconToLocalStorage"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
